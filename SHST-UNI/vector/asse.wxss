/**
 * 动画
 */

@keyframes shallow {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.9;
  }
}

/**
 * Button
 * Color Size
 */

.asse-btn {
  display: inline-block;
  height: 36px;
  line-height: 36px;
  padding: 0 20px;
  margin: 3px;
  border-radius: 3px;
  text-align: center;
  text-rendering: auto;
  font-size: 14px;
  cursor: pointer;
  background: #009688;
  color: #fff;
  transition: all 0.3s;
}

.asse-btn:hover {
  animation: shallow 0.3s;
  opacity: 0.9;
}

.asse-btn-blue {
  background: #1e9fff;
}

.asse-btn-white {
  height: 34px;
  line-height: 34px;
  padding: 0 19px;
  background: #fff;
  color: #000;
  border: 1px solid #eee;
}

.asse-btn-yello {
  background: #ffb800;
}

.asse-btn-orange {
  background: #ff5722;
}

.asse-btn-disable {
  background: #fbfbfb;
  color: #c9c9c9;
  cursor: not-allowed;
  border: 1px solid #eee;
}

.asse-btn-large {
  height: 40px;
  line-height: 40px;
  padding: 0 23px;
  font-size: 16px;
}

.asse-btn-small {
  height: 30px;
  line-height: 30px;
  padding: 0 10px;
  font-size: 12px;
}

.asse-btn-mini {
  height: 22px;
  line-height: 22px;
  padding: 0 5px;
  border-radius: 2px;
  font-size: 10px;
}

/**
 * 组件
 */

.asse-hr {
  display: block;
  margin: 10px 0;
  padding: 0 10px;
  height: 1px;
  background: #eee;
  border: none;
}

.asse-textarea {
  border: 1px solid #eee;
  width: calc(100% - 22px);
  padding: 10px;
  border-radius: 3px;
  margin-top: 10px;
  color: #aaa;
}


.asse-input {
  margin: 3px;
  padding: 3px;
}
