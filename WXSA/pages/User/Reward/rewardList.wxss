page{
  padding: 10px;
  width: calc(100% - 20px);
  font-size: 14px;
  line-height: 20px;
}

.card{
  font-size: 14px;
  display: flex;
  border-bottom:1px solid #eee;
  padding: 13px 10px;
  align-items: center;
  justify-content: space-between;
}

.name{
  font-size: 16px;
}

.time{
  font-size: 12px;
  color: #aaa;
  margin-top: 5px;
}

.amount{
  font-size: 17px;
  margin-right: 5px;
}