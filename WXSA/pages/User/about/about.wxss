
page{
  width: 100%;
  font-size: 14px;
}

.img{
  width: 270px;
  height: 90px;
  margin-left: calc(50% - 135px);
  margin-top:20px;
}

.userInfoCon{
  margin-top: 27px;
  padding: 10px;
}

.unitInfo{
  height: 30px;
  line-height: 30px;
  border-bottom: 1px solid #eee; 
  display: flex;
  justify-content: space-between;
  padding: 10px 15px;
}

.github{
  overflow: hidden;
  max-width: 30%;
  text-overflow: ellipsis;
}

.footer{
  display: flex;
  margin-top: 30px;
  justify-content: center;
}

.footer .text{
  color: #aaa;
}

button:after {
  border: none;
}

button{
  background: #fff;
  border: none;
  font-size: 14px;
  box-sizing: unset;
}

button:hover{
  opacity: 1;
  background: #fff;
  color: #000;
}