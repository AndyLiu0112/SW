/* pages/about/about.wxss */
page{
  padding: 10px;
  width: calc(100% - 20px);
  font-size: 14px;
  line-height: 20px;
}

.title{
  font-size: 18px;
  padding: 10px;
  border-bottom: 1px solid #eee;
  margin-bottom: 10px;
  
}

.aboutCon{
  width: calc(100% - 10px);
  padding: 5px;
  border: 1px solid #eee;
  border-radius: 3px;
  margin: 30px 0;
  
}

.infoCon{
  display: flex;
  line-height: 30px;
  word-break: break-all;  
  overflow: hidden;
  padding: 10px 0px;
  border-bottom: 1px solid #eee;
  width: 100%;
}

.infoCon view{
  display: flex;
  word-break: break-all; 
  min-width: 8px; 
}


.copy{
  margin-left: 10px;
  color:  #79B2F9;
}

.ad{
  position: fixed;
  bottom: 0;
  left: 0;
}

.point{
  width: 8px;
  height: 8px;
  border-radius: 8px;
  align-self: center;
  margin:0 8px;
}

.card{
  font-size: 14px;
  display: flex;
  border-bottom:1px solid #eee;
  padding: 15px 10px;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.123);
  margin-top: 10px;
  color: rgb(68, 67, 67);
}