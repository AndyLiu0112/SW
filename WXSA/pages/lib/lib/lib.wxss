page {
  font-size: 15px;
  padding: 10px;
  width: calc(100% - 20px);
}

.top {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 20px;
}

.asse-input {
  align-self: center;
  border: 1px solid #eee;
  margin: 0;
  display: block;
  height: 26px;
  width: 150px;
  margin-right: 10px;
}

.card, .cardTips {
  margin-top: 10px;
  border: 1px solid #eee;
  width: calc(100% - 22px);
  padding: 10px;
  line-height: 23px;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.123);
  margin-bottom: 10px;
}

.leftInfo:first-line {
  font-size: 18px;
}

.info {
  margin-top: 3px;
}

.rightJump{
  width: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  border-left: 1px solid #eee; 
}

.operat {
  display: flex;
  padding: 20px;
  align-items: center;
  justify-content: space-between;
}
