page{
  font-size: 15px; 
  padding: 10px;
  width: calc(100% - 20px); 
}
.top {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 20px;
}

.asse-input {
  align-self: center;
  border: 1px solid #eee;
}

.card, .cardTips {
  margin-top: 20px;
  border: 1px solid #eee;
  width: calc(100% - 22px);
  padding: 10px;
  line-height: 23px;
}

.card:first-line {
  font-size: 23px;
  line-height: 30px;  
}

.info {
  margin-top: 3px;
}

.operat{
  display: flex;
  padding: 20px;
  align-items: center;
  justify-content: space-between;
}
