@import "../../../vector/icon/iconfont.wxss";

page{
  width: 100%;
  line-height: 18px;
  font-size: 18px;
}

.tableTop{
  display: flex;
  padding: 5px 10px;
  justify-content: space-between;
  height: 35px;
}

.week{
  align-self: center;
  margin-left: 10px;
}



.pre,.next,.refresh{
  height: 100%;
  margin-left: 10px;
  align-self: center;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 37px;
}


.line {
  display: flex;
}

.info {
  margin-left: 7px;
}

.hrTable {
  border-bottom: 1px solid #eee;
  height: 133px;
}

.hrTable2 {
  border-bottom: 1px solid #eee;
  height: 136px;
}

.hrTable3 {
  border-bottom: 1px solid #eee;
  height: 137px;
}

.hrTable4 {
  border-bottom: 1px solid #eee;
  height: 136px;
}

.hrTable5 {
  border-bottom: 1px solid #eee;
  height: 136px;
}

.asse-hr {
  margin-bottom: 3px;
}


.timetableHide {
  min-height: 130px;
  border-radius: 3px;
  margin-left: 3px;
  text-align: center;
  word-break: break-all;
  color: #fff;
  padding: 1px;
  background: #fff;
  font-size: 13px;
}

.timetablehr {
  margin-top: 3px;
}

.asse-hr {
  background-color: #eee !important;
  height: 1px;
  border: none;
}

.weekGroup{
  display: flex;
}

.weekUnit{
  text-align: center;
  padding: 5px 0;
  font-size: 10px;
  width:calc(100% / 7);
}

.adAdapt{
  box-sizing: border-box;
  padding: 5px;
}

.operate{
  align-self: center;
}