/* pages/about/about.wxss */
page{
  padding: 10px;
  width: calc(100% - 20px);
  font-size: 14px;
  line-height: 21px;
}

.title{
  font-size: 18px;
  padding: 10px;
  border-bottom: 1px solid #eee;
  margin-bottom: 10px;
  
}

.aboutCon{
  width: calc(100% - 10px);
  padding: 5px;
  border: 1px solid #eee;
  border-radius: 3px;
  margin: 30px 0;
  
}

.infoCon{
  display: flex;
  flex-wrap: wrap;
  line-height: 30px;
  word-break: break-all;  
  overflow: hidden;
  padding: 10px 0px;
  border-bottom: 1px solid #eee;
  width: 100%;
}



.copy{
  margin-left: 10px;
  color:  #79B2F9;
}

.ad{
  position: fixed;
  bottom: 0;
  left: 0;
}